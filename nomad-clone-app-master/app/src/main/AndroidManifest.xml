        <activity android:name=".ui.community.CommunitySearchActivity" />
        <activity android:name=".ui.community.CommunityWriteActivity" android:hardwareAccelerated="true"/>
        <activity android:name=".ui.courses.CourseDetailActivity" />
        <activity android:name=".UserDashboardActivity" />
        <activity android:name=".CancleOrRefundPolicyActivity" />
        <activity android:name=".PrivacyPolicyActivity" />
        <activity android:name=".ServiceTermActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".JoinActivity" />
        <activity android:name=".ui.faq.FaqActivity" />
        <activity android:name=".ui.challenges.ChallengesActivity" />
        <activity android:name=".ui.community.CommunityActivity" />
        <activity android:name=".ui.courses.CoursesActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>